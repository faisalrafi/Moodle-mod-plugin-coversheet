{{!
    @template mod_coversheet/template_list
    Example context (json):
    {

    }
}}

<a href="{{webroot}}/mod/coversheet/adminpages/add_template.php?id={{cmid}}" class="btn btn-outline-primary">
    Add Templates
</a>

<h2 class="resource-heading mt-5">Template List</h2>
<ul class="resource-list">
    {{#templates}}
        {{#active}}
            <li class="list-design mb-2 d-flex justify-content-between" style="background-color: #50ff00">{{title}} <b>Activated</b></li> 
        {{/active}}   
        {{^active}}
            <li class="list-design mb-2">{{title}}</li> 
        {{/active}} 
        
        <a href="update_template.php?id={{cmid}}&templateid={{templateid}}" class="btn btn-sm btn-info mb-4 border-radius">Edit</a>
        <a class="btn btn-sm btn-danger mb-4 border-radius" href="#" data-toggle="modal" data-target="#deleteModal{{templateid}}">Delete</a>
        <div class="modal fade" id="deleteModal{{templateid}}" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this template?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-danger" href="update_template.php?id={{cmid}}&templateid={{templateid}}&action=delete">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    {{/templates}}
</ul>