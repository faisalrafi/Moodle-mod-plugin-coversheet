{{!
    @template mod_coversheet/content_list
    Example context (json):
    {

    }
}}
<a href="{{webroot}}/mod/coversheet/adminpages/add_content.php?id={{cmid}}" class="btn btn-outline-primary">
Add More Content
</a>
<a href="{{webroot}}/mod/coversheet/view.php?id={{cmid}}" class="btn btn-outline-danger">
Back To Main Page
</a>
<h3 class="text-center py-4 bg-gray mt-3">Contents</h3>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th class="text-center">Content</th>
        <th class="text-center">Edit</th>
        <th class="text-center">Delete</th>
    </tr>
    </thead>
    <tbody>
    {{#contents}}
        <tr>
            <td>{{{html}}}</td>
            <td><a class="btn btn-info" href="update_content.php?id={{cmid}}&contentid={{contentid}}">Edit</a></td>
            <td>
                <a class="btn btn-danger text-left" href="#" data-toggle="modal" data-target="#deleteModal{{id}}">Delete</a>
                <div class="modal fade" id="deleteModal{{id}}" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this content?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                <a class="btn btn-danger" href="update_content.php?id={{cmid}}&contentid={{contentid}}&action=delete">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    {{/contents}}
    </tbody>
</table>

